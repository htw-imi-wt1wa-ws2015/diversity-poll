<%= form_for [@dimension,@value], :html => { :class => "form-horizontal value" } do |f| %>

    <% if @value.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@value.errors.count, "error") %> prohibited this value from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @value.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :label, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :label, :class => 'form-control' %>
    </div>
    <%= error_span(@value[:label]) %>
  </div>
  <%= f.hidden_field(:dimension_id, value: @value.dimension_id) %>



  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            dimension_values_path, :class => 'btn btn-default' %>

<% end %>
